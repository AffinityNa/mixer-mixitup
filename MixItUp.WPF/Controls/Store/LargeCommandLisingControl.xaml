<local:StoreListingControl x:Class="MixItUp.WPF.Controls.Store.LargeCommandLisingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Store"
                           
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                           
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="450">
    <Button Style="{StaticResource MaterialDesignFlatButtonDefaultColor}" Width="500" MaxWidth="500" Height="120" MaxHeight="120" Click="Button_Click" ToolTip="{Binding TooltipDescription}">
        <Border Style="{StaticResource DefaultBorder}" Margin="-15,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" x:Name="ListingImage" Width="90" Height="90" Source="{Binding DisplayImageLink}" />

                <Grid Grid.Column="2" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ListingName" Grid.Row="0" Width="350" MaxWidth="350" HorizontalAlignment="Left" Margin="2,0,0,0" Text="{Binding Name}" />

                    <Grid Grid.Row="2" HorizontalAlignment="Left" Margin="2,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" x:Name="RatingTextBlock" Text="{Binding AverageRatingDisplayString}" VerticalAlignment="Center" />
                        <MaterialDesign:PackIcon Grid.Column="1" Kind="Star" VerticalAlignment="Center" />
                    </Grid>

                    <TextBlock x:Name="ListingDescription" Grid.Row="4" Width="350" MaxWidth="350" HorizontalAlignment="Left" Margin="2,0,0,0" Text="{Binding Description}" TextWrapping="Wrap" Height="35" TextTrimming="WordEllipsis" />
                </Grid>
            </Grid>
        </Border>
    </Button>
</local:StoreListingControl>
