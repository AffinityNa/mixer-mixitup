<Controls:LoadingControlBase x:Class="MixItUp.WPF.Controls.Store.CategoryCommandListingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Store"
             xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="CategoryNameTextBlock" Grid.Row="0" Style="{StaticResource HeaderTextBlock}" FontSize="20" HorizontalAlignment="Left" TextDecorations="Underline" />

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ContentControl x:Name="Listing1" Grid.Column="0" />

            <ContentControl x:Name="Listing2" Grid.Column="2" />

            <ContentControl x:Name="Listing3" Grid.Column="4" />

            <ContentControl x:Name="Listing4" Grid.Column="6" />

            <ContentControl x:Name="Listing5" Grid.Column="8" />
        </Grid>
    </Grid>
</Controls:LoadingControlBase>
