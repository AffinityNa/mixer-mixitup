<Controls:MainControlBase x:Class="MixItUp.WPF.Controls.Events.EventsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Events"
             xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <local:EventCommandControl x:Name="OnFollowCommandControl" Grid.Column="0" />

        <local:EventCommandControl x:Name="OnHostCommandControl" Grid.Column="2" />

        <local:EventCommandControl x:Name="OnSubscribeCommandControl" Grid.Column="4" />
    </Grid>
</Controls:MainControlBase>
