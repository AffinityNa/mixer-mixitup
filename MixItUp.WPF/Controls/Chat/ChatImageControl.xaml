<UserControl x:Class="MixItUp.WPF.Controls.Chat.ChatImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Chat"
             mc:Ignorable="d" VerticalAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="Image" Grid.Column="0" Margin="5,0,5,0" />
        <TextBlock x:Name="AltText" Grid.Column="1" Visibility="Collapsed" Margin="5,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
