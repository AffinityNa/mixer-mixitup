<UserControl x:Class="MixItUp.WPF.Controls.Chat.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Chat"
             xmlns:UsersControls="clr-namespace:MixItUp.WPF.Controls.Users"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <UsersControls:UserProfileAvatarControl x:Name="UserAvatar" Grid.Column="0" />

            <TextBlock x:Name="UserTextBlock" Grid.Column="2" Text="{Binding User.UserName}" Foreground="{Binding User.PrimaryRoleColor}" VerticalAlignment="Center" />

            <Grid x:Name="WhisperTargetGrid" Grid.Column="3" Visibility="{Binding IsWhisper, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Hidden}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1" Text="&#x2794;" VerticalAlignment="Center" />

                <TextBlock Grid.Column="3" x:Name="TargetUserTextBlock" Text="{Binding TargetUsername}" VerticalAlignment="Center" />

            </Grid>

            <TextBlock Grid.Column="4" VerticalAlignment="Center">:</TextBlock>
            
        </Grid>

        <TextBlock x:Name="MessageTextBlock" Grid.Column="2" Text="{Binding Message}" TextWrapping="Wrap" Margin="0,2,0,0" />

    </Grid>
</UserControl>
