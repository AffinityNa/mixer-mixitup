<MainControls:MainControlBase x:Class="MixItUp.WPF.Controls.Settings.AdvancedSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Settings"
             xmlns:MainControls="clr-namespace:MixItUp.WPF.Controls.MainControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlock}">Access the folder where Mix It Up is installed:</TextBlock>
        <Button x:Name="InstallationDirectoryButton" Grid.Row="0" Grid.Column="2" Content="Installation Folder" Click="InstallationDirectoryButton_Click" />
        
        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlock}">Backup your settings to a zip file:</TextBlock>
        <Button x:Name="BackupSettingsButton" Grid.Row="2" Grid.Column="2" Content="Backup Settings" Click="BackupSettingsButton_Click" />

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlock}">Restore your settings from a zip file:</TextBlock>
        <Button x:Name="RestoreSettingsButton" Grid.Row="4" Grid.Column="2" Content="Restore Settings" Click="RestoreSettingsButton_Click" />

        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlock}">Re-run the New User Wizard to re-import your data:</TextBlock>
        <Button x:Name="ReRunWizardSettingsButton" Grid.Row="6" Grid.Column="2" Content="New User Wizard" Click="ReRunWizardSettingsButton_Click" />

        <Separator Grid.Row="8" Grid.ColumnSpan="2" Margin="10" />

        <TextBlock Grid.Row="10" Grid.Column="0" x:Name="UnlockAllCommandsTextBlock" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlock}">Unlock all commands types:</TextBlock>
        <ToggleButton Grid.Row="10" Grid.Column="2" x:Name="UnlockAllCommandsToggleButton" Checked="UnlockAllCommandsToggleButton_Checked" Unchecked="UnlockAllCommandsToggleButton_Checked" />

        <Separator Grid.Row="12" Grid.ColumnSpan="2" Margin="10" />

        <TextBlock Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource HeaderTextBlock}">Enable/Disable Diagnostic logging for finding issues:</TextBlock>
        <Button x:Name="EnableDiagnosticLogsButton" Grid.Row="14" Grid.Column="2" Content="Enable Diagnostics" Click="EnableDiagnosticLogsButton_Click" Visibility="Collapsed" />
        <Button x:Name="DisableDiagnosticLogsButton" Grid.Row="14" Grid.Column="2" Content="Disable Diagnostics" Click="DisableDiagnosticLogsButton_Click" Visibility="Collapsed" />
    </Grid>
</MainControls:MainControlBase>
