<UserControl x:Class="MixItUp.WPF.Controls.Settings.Generic.GenericButtonSettingsOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Settings.Generic"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <System:String x:Key="ColumnHeaderFormat">{0}:</System:String>
    </UserControl.Resources>

    <Grid Margin="20, 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="{Binding Name, StringFormat={StaticResource ColumnHeaderFormat}}" ToolTip="{Binding Tooltip}" HorizontalAlignment="Left" />

        <Button Grid.Column="1" Content="{Binding ButtonName}" Command="{Binding Command}" IsEnabled="{Binding Enabled}" ToolTip="{Binding Tooltip}" />
    </Grid>
</UserControl>