<local:SettingsControlBase x:Class="MixItUp.WPF.Controls.Settings.ChatSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Settings"
             xmlns:resx="clr-namespace:MixItUp.Base;assembly=MixItUp.Base"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:util="clr-namespace:MixItUp.WPF.Util"
             xmlns:MainControls="clr-namespace:MixItUp.WPF.Controls.MainControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <local:SettingsControlBase.Resources>
        <System:String x:Key="ColumnHeaderFormat">{0}:</System:String>
        <util:LocalizationConverter x:Key="LocalizationConverter"/>
    </local:SettingsControlBase.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.FontSize}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ComboBox x:Name="FontSizeComboBox" Grid.Row="0" Grid.Column="2" SelectionChanged="FontSizeComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource LocalizationConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.OnlyShowAlertsInDashboard}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="8" Grid.Column="2" x:Name="OnlyShowAlertsInDashboardToggleButton" Checked="OnlyShowAlertsInDashboardToggleButton_Checked" Unchecked="OnlyShowAlertsInDashboardToggleButton_Checked" />

        <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.ShowLatestChatMessagesAtTopInsteadOfBottom}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="10" Grid.Column="2" x:Name="LatestChatAtTopToggleButton" Checked="LatestChatAtTopToggleButton_Checked" Unchecked="LatestChatAtTopToggleButton_Checked" />

        <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.HideViewerAndChatterNumbers}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="12" Grid.Column="2" x:Name="HideViewerAndChatterNumbersToggleButton" Checked="HideViewerAndChatterNumbersToggleButton_Checked" Unchecked="HideViewerAndChatterNumbersToggleButton_Checked" />

        <TextBlock Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.HideChatUserList}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="14" Grid.Column="2" x:Name="HideChatUserListToggleButton" Checked="HideChatUserListToggleButton_Checked" Unchecked="HideChatUserListToggleButton_Checked" />

        <TextBlock Grid.Row="16" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.HideDeletedMessages}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="16" Grid.Column="2" x:Name="HideDeletedMessagesToggleButton" Checked="HideDeletedMessagesToggleButton_Checked" Unchecked="HideDeletedMessagesToggleButton_Checked" />

        <TextBlock Grid.Row="18" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.TrackWhispererNumbers}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="18" Grid.Column="2" x:Name="TrackWhispererNumberToggleButton" Checked="TrackWhispererNumberToggleButton_Checked" Unchecked="TrackWhispererNumberToggleButton_Checked" />

        <TextBlock Grid.Row="20" Grid.Column="0" VerticalAlignment="Center" Text="{Binding Source={x:Static resx:Resources.ShowMessageTimestamp}, StringFormat={StaticResource ColumnHeaderFormat}}" />
        <ToggleButton Grid.Row="20" Grid.Column="2" x:Name="ShowMessageTimestampsToggleButton" Checked="ShowMessageTimestampsToggleButton_Checked" Unchecked="ShowMessageTimestampsToggleButton_Checked" />

        <TextBlock Grid.Row="22" Grid.Column="0" VerticalAlignment="Center">Show BetterTTV Emotes (Requires Restart):</TextBlock>
        <ToggleButton Grid.Row="22" Grid.Column="2" x:Name="ShowBetterTTVEmotesToggleButton" Checked="ShowBetterTTVEmotesToggleButton_Checked" Unchecked="ShowBetterTTVEmotesToggleButton_Checked" />

        <TextBlock Grid.Row="24" Grid.Column="0" VerticalAlignment="Center">Show FrankerFaceZ Emotes (Requires Restart):</TextBlock>
        <ToggleButton Grid.Row="24" Grid.Column="2" x:Name="ShowFrankerFaceZEmotesToggleButton" Checked="ShowFrankerFaceZEmotesToggleButton_Checked" Unchecked="ShowFrankerFaceZEmotesToggleButton_Checked" />
    </Grid>
</local:SettingsControlBase>
